<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gui.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label prefHeight="0.0" prefWidth="113.0" text="Calculate sum">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtNumber1" promptText="first number" />
      <TextField fx:id="txtNumber2" promptText="second number" />
      <Button fx:id="btSum" mnemonicParsing="false" onAction="#onBtSumAction" text="sum" />
      <Label text="Result =" />
      <Label fx:id="labelResult" alignment="BOTTOM_LEFT" />
   </children>
</VBox>
